
<!DOCTYPE html>
<html lang="en">

<% include ../partials/head %>


  <body>
    <div id="wrapper">
        <div class="overlay"></div>
    
<% include ../partials/sidebar %>

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <button type="button" class="hamburger is-closed" data-toggle="offcanvas">
                <span class="hamb-top"></span>
    			<span class="hamb-middle"></span>
				<span class="hamb-bottom"></span>
            </button>
            
<div class="container">
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
          <h1><%= title %></h1>
            <form class="form" method="post">
              <div class="form-group">
                <label for="NameTextField">Name</label>
                <input type="text" class="form-control" id="NameTextField"
                placeholder="Name" name="name" value="<%= contacts.name %>" required>
              </div>
              <div class="form-group">
                <label for="NumberTextField">Number</label>
                <input type="text" class="form-control" id="NumberTextField"
                placeholder="Contact Number" name="number" value="<%= contacts.number %>"  required>
              </div>
              <div class="form-group">
                <label for="EmailTextField">Email</label>
                <input type="text" class="form-control" id="EmailTextField"
                placeholder="Email address" name="email" value="<%= contacts.email %>"  required>
              </div>

              <button type="submit" class="btn btn-primary"><i class="fa fa-check-square-o"></i> Submit</button>
              <a href="/contacts" class="btn btn-warning"><i class="fa fa-undo"></i> Cancel</a>
            </form>
        </div>
      </div>
    </div>



        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->
 
    <% include ../partials/scriptPartials %>
  </body>
</html>
